<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:background="@color/layout_background"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/weight_card_view"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="15dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/card_background"
        android:layout_gravity="center"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:text="Weight"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/weight_edit_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:inputType="numberDecimal"
                android:hint="70"
                android:textColorHint="@color/text_hint"
                />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Kg"

        />

        </LinearLayout>

    </LinearLayout>

        </androidx.cardview.widget.CardView>
    //
    <androidx.cardview.widget.CardView
        android:id="@+id/height_card_view"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="15dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/card_background"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="Height"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/height_edit_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:inputType="numberDecimal"
                    android:hint="180"
                    android:textColorHint="@color/text_hint"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:text="cm"

                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


<Button
    android:id="@+id/action_calculate"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:padding="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:text="Calculate"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:backgroundTint="@color/btn_background"
    />


                        <androidx.cardview.widget.CardView
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="20dp"
                            android:elevation="15dp"
                            android:backgroundTint="@color/card_background"
                            >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/bmi_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="25"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="60dp"
                                android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/result_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="normal"
                            android:textAlignment="center"
                            android:textColor="@color/text_hint"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/info_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="normal range is 25"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        </androidx.cardview.widget.CardView>

</LinearLayout>